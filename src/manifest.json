{
    "manifest_version": 2,

    "name": "Adressaway Plus",
    "short_name": "Adressaway",
    "description": "Åpner Pluss-artikler på adressa.no (fungerer også på rbnett.no og smp.no)",

    "version": "0.3.1",

    "background": {
        "scripts": ["adressaway.js"]
    },

    "icons": {"48": "img/icon48x48.png", "128": "img/icon128x128.png"},

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.adressa.no/",
        "*://*.rbnett.no/",
        "*://*.smp.no/"
    ]
}
